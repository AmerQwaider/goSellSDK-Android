<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_payment_options_viewholder"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/billIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_basic_enlarged"
        android:background="@drawable/ic_bill_normal" />

    <View
        android:layout_width="@dimen/separator_width_basic"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_basic_tiny"
        android:layout_marginBottom="@dimen/margin_basic_tiny"
        android:background="@color/alto_gray"/>

    <LinearLayout
        android:id="@+id/currencyLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_basic"
        android:layout_weight="1"
        android:animateLayoutChanges="true"
        android:layoutDirection="ltr"
        android:orientation="vertical">

        <TextView
            android:id="@+id/currencySecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="13sp"
            android:text="SR 00.000"/>

        <TextView
            android:id="@+id/currencyMainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="20sp"
            android:text="KD 00.000" />
    </LinearLayout>


    <ImageView
        android:id="@id/arrowIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_basic"
        android:layout_marginStart="@dimen/margin_basic"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_arrow_right_normal" />

</LinearLayout>