<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/popup_element"
    android:background="@color/white"
    android:layout_height="60dp">


  <ImageView
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:id="@+id/status_icon"
      android:src="@drawable/ic_checkmark_normal"
      android:layout_marginLeft="23dp"
      android:layout_centerVertical="true"
      android:layout_alignParentStart="true"
      android:layout_marginStart="@dimen/margin_basic_16dp"
      android:layout_alignParentLeft="true" />

    <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="60dp"
     android:orientation="vertical"
     android:layout_centerHorizontal="true"
     >

   <TextView
       android:text="TextView"
       android:layout_width="wrap_content"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:id="@+id/status_text"
       android:textSize="18sp"
       android:textColor="@color/black"
       />

   <TextView
       android:text="TextView"
       android:layout_width="wrap_content"
       android:id="@+id/charge_id_txt"
       android:layout_height="0dp"
       android:layout_weight="1"
       />
 </LinearLayout>

  <LinearLayout
      android:layout_width="48dp"
      android:layout_height="56dp"
      android:layout_marginEnd="@dimen/margin_basic_16dp"
      android:layout_marginRight="@dimen/margin_basic_16dp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:id="@+id/close_icon_ll"
      android:gravity="center_horizontal"
      >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/btn_close_normal"
        android:id="@+id/close_icon"
        android:layout_gravity="center_vertical|center_horizontal"
        />

  </LinearLayout>


</RelativeLayout>