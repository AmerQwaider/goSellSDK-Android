
    <android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="@dimen/item_recent_width_basic"
        android:layout_height="@dimen/item_recent_height_basic"
        android:layout_marginStart="@dimen/margin_basic_16dp"
        android:layout_marginTop="@dimen/margin_basic_10dp"
        android:layout_marginEnd="@dimen/margin_basic_16dp"
        android:layout_marginBottom="@dimen/margin_basic_10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:strokeWidth="1dp"
     >

        <RelativeLayout
            android:id="@+id/recentPaymentsCardViewLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="@dimen/icon_width_basic"
                android:layout_height="@dimen/icon_height_basic"
                android:layout_centerInParent="true"

                />

            <ImageView
                android:id="@+id/deleteImageView"
                android:layout_width="@dimen/cancel_icon_width"
                android:layout_height="@dimen/cancel_icon_height"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_basic_3dp"
                android:layout_marginEnd="@dimen/margin_basic_3dp"
                android:layout_marginRight="@dimen/margin_basic_3dp"
                android:src="@drawable/btn_close_normal"
                android:visibility="invisible"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logoImageView"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/itemCheckmark"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_basic_8dp"
                    android:src="@drawable/ic_checkmark_normal"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/cardLastDigits"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center" />

            </LinearLayout>

        </RelativeLayout>


    </android.support.design.card.MaterialCardView>

