<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/businessIcon"
            android:layout_width="@dimen/icon_width_basic"
            android:layout_height="@dimen/icon_height_basic"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_basic_16dp"
            android:layout_marginStart="@dimen/margin_basic_16dp" />

        <TextView
            android:id="@+id/businessName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_basic_16dp"
            android:layout_marginTop="@dimen/margin_basic_16dp"
            android:layout_toEndOf="@+id/businessIcon"
            style="@style/TextView.Title"
            android:layout_toStartOf="@+id/closeButton" />

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_basic_16dp"
            android:layout_marginStart="@dimen/margin_basic_16dp"
            android:background="@drawable/btn_close_normal" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/paymentActivityFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <company.tap.gosellapi.internal.custom_views.GoSellPayLayout
        android:id="@+id/payButtonId"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

</LinearLayout>
